---
import About from '../components/About.astro'
import FindUs from '../components/FindUs.astro'
import GuestBook from '../components/GuestBook.tsx'
import Lost_Found from '../components/Lost_Found.astro'
import News from '../components/News.astro'
import Layout from '../layout/Layout.astro'
---

<Layout title="ForroÌ da Capita">
  <div
    class="flex flex-col md:flex-row justify-between items-top mt-7 md:mt-10 gap-x-10"
  >
    <div class="w-full md:w-7/12 flex flex-col">
      <div class="flex flex-col gap-y-10">
        <News ContainerClasses="order-1" TextClasses="text-xl pt-2" />
        <div class="flex flex-col gap-y-10 md:w-[70%] order-2">
          <FindUs
            ContainerClasses="order-2"
            TextClasses="text-base-content text-lg"
          />
          <Lost_Found
            ContainerClasses="order-3"
            TextClasses="text-base-content text-lg"
          />
          <About
            ContainerClasses="order-4"
            TextClasses="text-base-content text-lg"
          />
        </div>
      </div>
    </div>
    <div class="w-full md:w-5/12 md:mt-0 mt-15">
      <GuestBook client:only="react" containerClasses="order-4" />

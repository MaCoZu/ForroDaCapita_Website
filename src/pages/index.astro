---
import About from '../components/About.astro'
import FindUs from '../components/FindUs.astro'
import GuestBook from '../components/GuestBook.tsx'
import Lost_Found from '../components/Lost_Found.astro'
import News from '../components/News.astro'
import Layout from '../layout/Layout.astro'
---

<Layout title="ForroÌ da Capita">
  <div
    class="flex flex-col md:flex-row justify-between items-top mt-7 md:mt-20 gap-x-10"
  >
    <div class="w-full md:w-7/12 flex flex-col justify-center mx-auto gap-y-10 md:gap-y-15">
      <News
        HeadingClasses="text-2xl"
        ContainerClasses="order-1"
        TextClasses="text-xl pt-2"
      />
      <FindUs
        HeadingClasses="text-2xl"
        ContainerClasses="order-2 mt-0"
        TextClasses="text-primary-content text-lg"
      />
      <Lost_Found
        HeadingClasses="text-2xl"
        ContainerClasses="order-3"
        TextClasses="text-primary-content text-lg"
      />
      <About
        HeadingClasses="text-2xl"
        ContainerClasses="order-4"
        TextClasses="text-primary-content text-lg"
      />
      <GuestBook client:only="react" 
        HeadingClasses="text-2xl"
      containerClasses="order-4 mt-20" />

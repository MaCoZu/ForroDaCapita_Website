---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import '../styles/main.css'
import SpeedInsights from '@vercel/speed-insights/astro'
import Analytics from '@vercel/analytics/astro'
const { title } = Astro.props
import 'tippy.js/dist/tippy.css'
---

<!doctype html>
<html lang="en" data-theme="retro">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/src/assets/icons/favicon.ico" type="image/x-icon" />
    <title>{title}</title>

    <script>
      // Apply the theme as early as possible
      ;(function () {
        const savedTheme = localStorage.getItem('theme')
        if (savedTheme) {
          document.documentElement.setAttribute('data-theme', savedTheme)
        }
      })()
    </script>
  </head>
  <body class="flex flex-col min-h-screen bg-base-100">
    <SpeedInsights />
    <Analytics />
    <main class="w-[90%] md:w-[80%] mx-auto">
      <Header />
      <slot />
      <Footer ContainerClasses="mt-30 font-content text-small" />
    </main>
    <script>
      import tippy from 'tippy.js'
      declare global {
        interface Window {
          tippy: typeof tippy
        }
      }
      window.tippy = tippy
    </script>
  </body>
</html>

<script>
  // Function to set the theme
  function setTheme(theme: string) {
    document.documentElement.setAttribute('data-theme', theme)
    localStorage.setItem('theme', theme)
  }

  // Function to initialize the theme
  function initializeTheme() {
    const themeController = document.querySelector('.theme-controller')

    if (themeController) {
      themeController.addEventListener('change', function (event) {
        const input = event.currentTarget as HTMLInputElement
        setTheme(input.checked ? 'coffee' : 'retro')
      })
    }
  }

  // Initialize the theme when the page loads
  document.addEventListener('DOMContentLoaded', initializeTheme)
</script>

<script>
  // Utility to set theme
  function setTheme(theme: string) {
    document.documentElement.setAttribute('data-theme', theme)
    localStorage.setItem('theme', theme)
  }

  // Detect and set initial theme
  ;(function () {
    const savedTheme = localStorage.getItem('theme')
    if (savedTheme) {
      setTheme(savedTheme)
    } else {
      const prefersDark = window.matchMedia(
        '(prefers-color-scheme: coffee)'
      ).matches
      setTheme(prefersDark ? 'coffee' : 'retro')
    }
  })()

  // Theme switcher
  document.addEventListener('DOMContentLoaded', function () {
    const img = document.getElementById('theme-switch-img')
    if (img) {
      img.addEventListener('click', function () {
        const current = document.documentElement.getAttribute('data-theme')
        setTheme(current === 'coffee' ? 'retro' : 'coffee')
      })
    }
  })
</script>
<script>
  import tippy from 'tippy.js'
  declare global {
    interface Window {
      tippy: typeof tippy
    }
  }
  window.tippy = tippy

  // Centralized Tippy.js initialization
  function initializeTippy() {
      // Find all elements with data-tippy-content
      const tippyElements = document.querySelectorAll('[data-tippy-content]')

      tippyElements.forEach((element) => {
        const content = element.getAttribute('data-tippy-content')
        const placement = element.getAttribute('data-tippy-placement')

        if (!content) return

        tippy(element as Element, {
          content: content,
          placement: (placement as any) || 'auto',
          arrow: true,
          theme: 'custom-tooltip',
          offset: [0, 8],
          animation: 'scale',
          duration: [200, 150],
          hideOnClick: false,
          trigger: 'mouseenter focus',
          onShow(instance) {
            const isMobile = window.innerWidth < 768
            const elementPlacement = element.getAttribute('data-tippy-placement')

            if (isMobile && !elementPlacement) {
              // Auto-adjust to top on mobile unless placement is explicitly set
              instance.setProps({ placement: 'top' })
            } else if (!elementPlacement) {
              // Use auto placement on desktop
              instance.setProps({ placement: 'auto' })
            }
          },
        })
      })
    }

  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', initializeTippy)
</script>
